@model e_commerce.ViewModel.ProductCartViewHome

    @{
        ViewBag.Title = "ProductForm";

    }

    <h2>ProductForm</h2>
<div class="row">
    <div class="col-md-4 col-sm-6 col-xs-6">
        @using (Html.BeginForm("Save", "Products", FormMethod.Post, new { @enctype = "multipart/form-data", @id = "myForm", @role = "form" }))
        {

            @Html.ValidationSummary(true, "please Fix the following errors")
            <div class="form-group">
                @Html.LabelFor(c => c.Product.Name)
                @Html.TextBoxFor(c => c.Product.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Product.Name)


            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Product.price)
                @Html.TextBoxFor(c => c.Product.price, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Product.price)


            </div>



            <div class="form-group">
                @Html.LabelFor(c => c.Product.CategoryId)
                @Html.DropDownListFor(c => c.Product.CategoryId, new SelectList(Model.Categoris, "id", "Name"), "Select Category", new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Product.CategoryId)

            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Product.qnt)
                @Html.TextBoxFor(c => c.Product.qnt, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Product.qnt)


            </div>

            <div class="form-group">

                @Html.LabelFor(c => c.Product.img, htmlAttributes: new { @class = "control-label" })
                <input type="file" name="file" />
                @Html.ValidationMessageFor(c => c.Product.img)

            </div>



            @Html.HiddenFor(c => c.Product.id)

            <button type="submit" class="btn btn-primary">Save</button>

        }
        </div>
</div>