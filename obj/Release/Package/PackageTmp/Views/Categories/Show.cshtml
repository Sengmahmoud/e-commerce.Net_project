@model e_commerce.ViewModel.ProductCartViewHome
@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>

<div class="container">
    <!-- row -->
    <div class="row">


        <!-- MAIN -->
        <div id="main" class="">


            <!-- STORE -->
            <div id="">
                <!-- row -->
                <div class="row">

                    @{foreach (var product in Model.Products)
                        {
                            <div class="col-md-4">
                                <div class="thumbnail">
                                    <img src="@Url.Content("~/resources/" + product.img)" style="width:100%;height: 100%; border-radius: 12px" />
                                    <br>
                                    @Html.ActionLink(product.Name, "Details", "Products", new { product.id }, new { @class = "btn btn-primary fa fa" })
                                @{ if (Request.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                            @Html.ActionLink("Delete", "Delete", "Products", new { product.id }, new { @class = "btn btn-danger fa fa" })
                                            }
                                        }
                                            <h2></h2>
                                        </div>
                                    </div>
                                        }
                                    }
                                </div>
                                <!-- /row -->
                            </div>
            <!-- /STORE -->
            <!-- store bottom filter -->
            <!-- /store bottom filter -->
                                    </div>
        <!-- /MAIN -->
                                </div>
    <!-- /row -->
                            </div>

